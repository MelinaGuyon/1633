html
  width: 100%
  height: 100%
  overflow-x: hidden
  overflow-y: hidden

html::-webkit-scrollbar
  width: 0px
  background: $light-salmon

body
  background: $light-salmon
  user-select: none
  font-family: RobotoCondensedRegular, 'Arial, Helvetica, sans-serif'
  width: 100%
  height: 100%
  position relative
  cursor: none

  .app
    width: 100%
    height: 100%
    background-image: linear-gradient(to bottom, #000204, #101d37 80%, #101d37);

    &:before
      z-index $indexBorder
      position absolute
      content: ''
      width: 200px;
      height 100%
      display: block
      background-image: linear-gradient(to left, transparent, rgba(0, 0, 0, .1) 20%,  #000000 100%)

    &:after
      z-index $indexBorder
      content: ''
      width: 200px;
      height 100%
      display: block
      background-image: linear-gradient(to right, transparent, rgba(0, 0, 0, .1) 20%,  #000000 100%)
      position absolute
      right 0
      top: 0
