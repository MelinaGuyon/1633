.chrono-timeline
  z-index: $indexChronologieTimeline
  position fixed
  right: 40px;
  top 50%
  transform: translateY(-50%)
  opacity: 0
  pointer-events: none
  transition: opacity 0.3s $quad-ease-out;

  &.visible
    opacity: 1
    pointer-events: auto
    transition: opacity 0.6s $quad-ease-in-out;
    transition-delay: 0.9s;

  .container
    position relative
    display: flex
    flex-direction: column
    align-items: flex-end;

    span
      font-size: 12px
      position absolute
      left: -40px
      transform: translateY(-25%);
      transition: opacity 0.3s $quad-ease-out, transform 0.3s $quad-ease-out;

    .stick-container
      position relative
      width: 24px
      height 1px
      padding: 4px 0
      display: flex
      justify-content: flex-end

      .stick
        width: 24px
        height 1px
        transform: scaleX(0.2)
        background: $light-black
        transform-origin: right;
        transition: transform 0.3s $quad-ease-out;

