.menu
  width: 100%

  &.light
    .menu__top-left
      img.light
        opacity: 0
      img.dark
        opacity: 1

    .menu__top-right button
      color: $light-black

    .menu__bottom-left button.back
      opacity 1
      pointer-events: auto
      transition: opacity 0.3s $quad-ease-out;
      transition-delay: .6s;

    .menu__left-center button
      color: $light-black
      border: 1px solid rgba(0, 0, 0, 0.5)

    .nav-sound__btn div
      background: $light-black

    .nav-playpause__btn div
      background: $light-black

  &__top-left
    position absolute
    top 40px
    left 50px
    width 60px
    height 65px
    z-index: $indexMenu

    img
      position absolute
      width 100%
      opacity 0
      transition: opacity 0.6s $quad-ease-out;

      &.light
        opacity 1

  &__top-right
    position absolute
    right: 50px
    top: 30px
    z-index: $indexMenu

    button
      padding: 10px 10px
      margin-right: 30px
      transition: color 0.6s $quad-ease-out;

      &:last-child
        margin: -10px

  &__bottom-left
    position absolute
    z-index: $indexMenu
    left: 65px
    bottom: 30px

    button.back
      position absolute
      transition: opacity 0.2s $quad-ease-out;

    button.collect
      transition: opacity 0.3s $quad-ease-out;

      &:hover
        &::before
          transform: translateX(12px) translateY(-45%) rotate(45deg) !important

        &::after
          transform: translateX(12px) translateY(-45%) rotate(-45deg) !important

      &::before
        transform: translateX(8px) translateY(-45%) rotate(45deg) !important

      &::after
        transform: translateX(8px) translateY(-45%) rotate(-45deg) !important

      &.visible
        opacity 1
        pointer-events: auto

    button.back, button.collect
      opacity 0
      pointer-events: none
      color: $salmon !important
      padding: 10px 10px 10px 30px

      &:hover
        &::before
          transform: translateX(6px) translateY(-45%) rotate(135deg)

        &::after
          transform: translateX(6px) translateY(-45%) rotate(-135deg)

      &::before
        content: ''
        display: block
        position absolute
        left: 0
        top: 50%
        width: 8px
        height: 1px
        background-color: $salmon
        transform-origin: right
        transform: translateY(-45%) rotate(135deg)
        transition: transform 0.6s $quad-ease-out;

      &::after
        content: ''
        display: block
        position absolute
        left: 0
        top: 50%
        width: 8px
        height: 1px
        background-color: $salmon
        transform-origin: right
        transform: translateY(-45%) rotate(-135deg)
        transition: transform 0.6s $quad-ease-out;

  &__left-center
    left: 50px
    top: 50%
    transform translateY(-60%)
    position: absolute
    z-index: $indexMenu

    button
      border: 1px solid rgba(255, 255, 255, 0.3)
      border-radius: 100%
      height: 34px
      width: 34px
      font-size: 10px;
      background-color transparent
      color: $white
      cursor: none
      outline: none
      display block
      margin 14px 0
      transition: color 0.6s $quad-ease-out, border 0.6s $quad-ease-out;;

  &__right-center
    right: 50px
    top: 50%
    transform translateY(-60%)
    position: absolute
    z-index: $indexMenu
    font-family: RobotoCondensedLight
    transition: opacity .3s $quad-ease-out;

    &.hidden
      opacity 0
      pointer-events: none;

    button
      border: 0px
      background-color transparent
      color: $white
      outline: none
      display block
      padding: 5px
      margin 14px 0
      cursor: none

  .nav
    background-color transparent
    color: $white
    border 0px
    cursor: none
    font-weight: bold
    font-family: RobotoCondensedLight
    letter-spacing: 2px
    font-size: 14px
    text-transform: lowercase

    &-playpause
      transition: opacity .6s $quad-ease-out;

      &.hidden
        opacity 0.3
        pointer-events: none

      &__btn
        position: relative;
        height: 34px;
        width: 34px;
        display: block!important;

        div
          top: 17px;
          left: 19px;
          margin: -1px 0 0 -7px;
          width: 10px;
          height: 1px;
          position: absolute;
          background: #fff;
          display: block;
          transition: 0.6s $quad-ease-out;

        .l1
          -webkit-transform: translate(2px,0px) rotate(90deg);
          transform: translate(2px,0px) rotate(90deg);

        .l2
          -webkit-transform: translate(-4px,0px) rotate(90deg);
          transform: translate(-4px,0px) rotate(90deg);

        .l3
          -webkit-transform: translate(-4px,0px) rotate(90deg);
          transform: translate(-4px,0px) rotate(90deg);

        &.pause
          .l1
            -webkit-transform: translate(-0px,-3px) rotate(30deg);
            transform: translate(-0px,-3px) rotate(30deg);

          .l2
            -webkit-transform: translate(-4px,0px) rotate(90deg);
            transform: translate(-4px,0px) rotate(90deg);

          .l3
            -webkit-transform: translate(-0px,2px) rotate(-30deg);
            transform: translate(-0px,2px) rotate(-30deg);

    &-sound
      &__btn
        &.pause
          .l1, .l2, .l3, .l4, .l5, .l6
            animation none
        div
          height: 2px
          width: 1px
          display inline-block
          margin 1px
          background-color: $white
          transition: 1s ease
          transition: background 0.6s $quad-ease-out;

        .l1, .l4
          animation-duration: 1s
          animation-iteration-count: infinite
          animation-direction: alternate

        .l2,
          animation-duration: .6s
          animation-iteration-count: infinite
          animation-direction: alternate

        .l3, .l5
          animation-duration: 2s
          animation-iteration-count: infinite

        .l1, .l6
          animation-name: sound
        .l2, .l5
          animation-name: soundmid
        .l3, .l4
          animation-name: soundup

    &-lang
      text-transform: uppercase

@keyframes sound {
  from {
    height: 0
  }

  to {
    height: 5px
  }
}

@keyframes soundmid {
  from {
    height: 0
  }

  to {
    height: 8px
  }
}

@keyframes soundup {
  from {
    height: 0
  }

  to {
    height: 10px
  }
}
