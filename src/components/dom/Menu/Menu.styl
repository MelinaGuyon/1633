.menu
  width: 100%
  z-index: 2

  &__top-right
    position absolute
    right: 0
    top: 0


  &__left-center
    left: 50px
    top: 50%
    transform translateY(-50%)
    position: absolute

    button
      border: 1px solid rgba(255, 255, 255, 0.45)
      border-radius: 100%
      height: 30px
      width: 30px
      background-color transparent
      color #fff
      cursor: pointer
      outline: none
      display block
      margin 10px 0

  &__right-center
    right: 20px
    top: 50%
    transform translateY(-50%)
    position: absolute

    button
      border: 0px
      background-color transparent
      color #fff
      cursor: pointer
      outline: none
      display block
      margin 10px 0
