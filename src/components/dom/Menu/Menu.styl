.menu
  width: 100%
  z-index: 2

  &__top-right
    position absolute
    right: 0
    top: 0


  &__left-center
    left: 50px
    top: 50%
    transform translateY(-50%)
    position: absolute

    button
      border: 1px solid rgba(255, 255, 255, 0.45)
      border-radius: 100%
      height: 30px
      width: 30px
      background-color transparent
      color #fff
      cursor: pointer
      outline: none
      display block
      margin 10px 0

  &__right-center
    right: 20px
    top: 50%
    transform translateY(-50%)
    position: absolute

    button
      border: 0px
      background-color transparent
      color #fff
      cursor: pointer
      outline: none
      display block
      margin 10px 0

  .nav
    &-sound
      &__btn
        position: relative;
        height: 40px;
        width: 40px;
        display: block!important;

        div
          top: 15px;
          left: 15px;
          margin: -1px 0 0 -7px;
          width: 13px;
          height: 1px;
          position: absolute;
          background: #fff;
          display: block;
          transition: all 0.5s;

        .b1
          -webkit-transform: translate(-0px,-3px) rotate(30deg);
          transform: translate(-0px,-3px) rotate(30deg);

        .b2
          -webkit-transform: translate(-5px,0px) rotate(90deg);
          transform: translate(-5px,0px) rotate(90deg);

        .b3
          -webkit-transform: translate(-0px,3px) rotate(-30deg);
          transform: translate(-0px,3px) rotate(-30deg);

        &.pause
          .b1
            -webkit-transform: translate(3px,0px) rotate(90deg);
            transform: translate(3px,0px) rotate(90deg);

          .b2
            -webkit-transform: translate(-3px,0px) rotate(90deg);
            transform: translate(-3px,0px) rotate(90deg);

          .b3
            -webkit-transform: translate(-3px,0px) rotate(90deg);
            transform: translate(-3px,0px) rotate(90deg);
