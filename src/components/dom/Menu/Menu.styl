.menu
  width: 100%
  z-index: 2

  &__top-right
    position absolute
    right: 0
    top: 0

  &__left-center
    left: 60px
    top: 50%
    transform translateY(-50%)
    position: absolute

    button
      border: 1px solid rgba(255, 255, 255, 0.3)
      border-radius: 100%
      height: 40px
      width: 40px
      background-color transparent
      color #fff
      cursor: pointer
      outline: none
      display block
      margin 14px 0

  &__right-center
    right: 20px
    top: 50%
    transform translateY(-50%)
    position: absolute

    button
      border: 0px
      background-color transparent
      color #fff
      cursor: pointer
      outline: none
      display block
      margin 10px 0

  .nav
    background-color transparent
    color #fff
    border 0px
    margin-right: 60px

    &-playpause
      &__btn
        position: relative;
        height: 40px;
        width: 40px;
        display: block!important;

        div
          top: 20px;
          left: 20px;
          margin: -1px 0 0 -7px;
          width: 13px;
          height: 1px;
          position: absolute;
          background: #fff;
          display: block;
          transition: all 0.5s;

        .l1
          -webkit-transform: translate(-0px,-3px) rotate(30deg);
          transform: translate(-0px,-3px) rotate(30deg);

        .l2
          -webkit-transform: translate(-5px,0px) rotate(90deg);
          transform: translate(-5px,0px) rotate(90deg);

        .l3
          -webkit-transform: translate(-0px,3px) rotate(-30deg);
          transform: translate(-0px,3px) rotate(-30deg);

        &.pause
          .l1
            -webkit-transform: translate(3px,0px) rotate(90deg);
            transform: translate(3px,0px) rotate(90deg);

          .l2
            -webkit-transform: translate(-3px,0px) rotate(90deg);
            transform: translate(-3px,0px) rotate(90deg);

          .l3
            -webkit-transform: translate(-3px,0px) rotate(90deg);
            transform: translate(-3px,0px) rotate(90deg);

    &-sound
      &__btn
        &.pause
          .l1, .l2, .l3, .l4, .l5, .l6
            animation none
        div
          height: 2px
          width: 1px
          display inline-block
          margin-right 2px
          background-color #fff
          transition: 1s ease

        .l1, .l3
          animation-duration: 1s;
          animation-name: sound;
          animation-iteration-count: infinite;
          animation-direction: alternate;

        .l2, .l5
          animation-duration: .6s;
          animation-name: sound;
          animation-iteration-count: infinite;
          animation-direction: alternate;

        .l4, .l6
          animation-duration: 2s;
          animation-name: sound;
          animation-iteration-count: infinite;


@keyframes sound {
  from {
    height: 0
  }

  to {
    height: 5px
  }
}
