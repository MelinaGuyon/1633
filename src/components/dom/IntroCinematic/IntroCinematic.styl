.intro-cinematic
  z-index $indexCinematique
  position relative
  width: 100%
  height 100%
  background-image: linear-gradient(to bottom, rgba(0, 2, 4, 1), rgba(16, 29, 55, 1));
  opacity 0
  pointer-events: none
  transition: opacity 0.3s $quad-ease-out;
  display: flex
  justify-content: center
  align-items: center

  .cinematique-container
    display: flex
    justify-content: center
    align-items: center

  &.visible
    opacity 1

  p
    opacity 0
    position absolute
    font-size: 19px;
    line-height: 34px;
    font-family: RobotoCondensedLight;
    color: $white
    max-width 60%;
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)

  img
    position absolute
    opacity 0
    width: 80%
    height auto
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)

    &.first
      transform: translate(-50%, -50%) rotate(-15deg)

    &.second
      transform: translate(-50%, -50%) rotate(5deg)

    &.third
      left: 0
      top: 0
      position relative
      transform: rotate(-8deg)
