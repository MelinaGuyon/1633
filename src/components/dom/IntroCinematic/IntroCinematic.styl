.intro-cinematic
  // z-index $indexCinematique
  position relative
  width: 100%
  height 100%
  background-image: linear-gradient(to bottom, #000204, #101d37 80%, #101d37);
  opacity 0
  pointer-events: none
  transition: opacity 0.3s $quad-ease-out;
  display: flex
  justify-content: center
  align-items: center

  .cinematique-container
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height 100%

  &.visible
    opacity 1

  img
    position absolute
    opacity 0
    width: 100%
    height 100%
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    object-fit: cover
    transform-origin: left

    &.third
      position relative
