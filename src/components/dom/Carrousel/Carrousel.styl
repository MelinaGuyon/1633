.carrousel
  width: 100vw
  height: 100vh
  background-image: linear-gradient(to bottom, rgba(0, 2, 4, 1), rgba(16, 29, 55, 1));
  position: absolute
  left: 0
  top: 0
  z-index $indexCarousel
  transition 1s ease

  button
    position relative
    bottom: 100px

  [data-text]:before, [data-text]:after
    content: attr( data-text) "\00A0"
    display: inline-block
    min-width: 50%
    padding: 0
    background: transparent
    border: none
    margin: 0px
    outline: none
    -webkit-text-stroke: 1px #ffffff;
    font-family: EczarRegular;
    font-size: 100px;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    letter-spacing: 6px;
    color: rgba(255, 255, 255, 0);

  [data-text]:before
    animation: marque-defil 15s infinite linear;

  .carrousel-wrapper
    opacity 0
    pointer-events: none
    width: 100%
    height 100%
    transition .3s ease

    &:hover
      transform scale(1.25)

      [data-text]:before, [data-text]:after
        -webkit-text-stroke: 1px $salmon;

      .carrousel__form
        //width: 57vw;
        //height: 105vh;

        [data-text]:before, [data-text]:after
          color $salmon

        .carrousel__choice
          color $salmon

      .carrousel__textScrolling
      //bottom 90px

      .carrousel__textScrolling
        //bottom 90px
        //bottom 90px
        color $salmon

    .carrousel__choice
      -webkit-text-stroke: 1px $salmon;

    &.visible
      pointer-events: auto

  &__story
    font-family: RobotoCondensedLight;
    font-size: 44px;
    font-weight: normal;
    font-style: normal;
    font-stretch: condensed;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    position fixed
    left: 50%;
    transform: translateX(-50%);
    z-index 2
    top: 20vh

    &:after
      content: ''
      width: 1px
      background-color #fff
      height: 60px
      display block
      position absolute
      left: 50%
      transform translateX(-50%)
      top: -70px

    &:before
      content: ''
      width: 1px
      background-color #fff
      height: 120px
      display block
      position absolute
      left: 50%
      transform translateX(-50%)
      bottom: -130px

    &__number
      font-family: RobotoCondensedLight;
      font-size: 16px;
      font-weight: normal;
      font-style: normal;
      font-stretch: condensed;
      line-height: 0.88;
      letter-spacing: 1px;
      color: #ffffff;
      vertical-align: super;

  &__form
    width: 37vw;
    height: 85vh;
    background-color: #242146;
    display block;
    border-radius 400px 400px 0px 0px
    z-index 1
    overflow: hidden
    position relative
    transition .3s ease

    .carrousel__textScrolling
      width: 300vw;
      left: -34vw;
      position: absolute;

    .carrousel__choice
      color #fff

    [data-text]:before, [data-text]:after
      color #fff

    &__content
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      position absolute
      width: 37vw;
      height: 85vh;
      transition .3s ease
      display none

      &.active
        display block


  &__textScrolling
    display: block;
    padding: 0;
    overflow: hidden;
    bottom: 10px
    position fixed
    width: 300vw;
    max-width: 300vw;
    height: 200px;
    z-index 2
    left: -34vw;
    transition 1s ease
    contain: strict;

    &.hidden
      opacity: 0

    &.opacity
      opacity: 1

    div
      display inline-block
      position relative
      opacity 0

      &.active
        opacity 1

      span
        position: relative;
        display: inline-block;
        white-space: nowrap;
        top:0;
        -webkit-background-clip: text;

      span
        //animation: defilement 15s infinite linear;
        //margin-right: 10px
      margin: 0 10px

      strong
        //margin 0 30px

  &__choice
    padding: 0
    background: transparent
    border: none
    margin: 0px
    outline: none
    -webkit-text-stroke: 1px #ffffff;
    font-family: EczarRegular;
    font-size: 100px;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    //line-height: 0.89;
    letter-spacing: 6px;
    color: rgba(255, 255, 255, 0);
    display block
    animation-duration: 13s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-name: translationLeft;

  &.hidden
    display: none

  &.opacity
    opacity: 0

@keyframes translationLeft {
  0% { transform: translate(150%) }
  100% { transform: translate(-150%) }
}

@keyframes translationRight {
  0% { transform: translate(-150%) }
  100% { transform: translate(150%) }
}

@keyframes marque-defil {
  0% {
      margin-left: 0
  }
  100% {
      margin-left: -50%
  }
}