.carrousel
  width: 100vw
  height: 100vh
  background: black
  position: absolute
  left: 0
  top: 0
  z-index 3

  &__textScrolling
    display: block;
    padding: 0;
    overflow: hidden;
    bottom: 260px
    position fixed
    width: 100vw;
    max-width: 100vw;
    height: 200px;

    div
      position: absolute;
      min-width: 100%;

      span, &:after
        position: relative;
        display: inline-block;
        white-space: nowrap;
        top:0;

      span
        animation: defilement 10s infinite linear;
        margin-right: 10px

      strong
        margin 0 70px

      &:after
        position: absolute;
        top: 0px;
        left: 0px;
        content:attr(data-text);
        animation: defilement2 10s infinite linear;

  &__choice
    padding: 0
    background: transparent
    border: none
    margin: 0px
    outline: none
    -webkit-text-stroke: 1px #ffffff;
    font-family: Eczar;
    font-size: 180px;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    //line-height: 0.89;
    letter-spacing: 6px;
    color: rgba(255, 255, 255, 0);
    display none

    &.active
      display block
      animation-duration: 6s;
      animation-name: textDefilement;
      animation-iteration-count: infinite;

  &.hidden
    display: none

@keyframes defilement {
  0% {transform: translateX(0); }
  100% { transform: translateX(-100%); }
}

@keyframes defilement2 {
  0% {transform: translateX(100%); }
  100% { transform: translateX(0); }
}