.carrousel
  width: 100vw
  height: 100vh
  background-image: linear-gradient(to bottom, rgba(0, 2, 4, 1), rgba(16, 29, 55, 1));
  position: absolute
  left: 0
  top: 0
  z-index $indexCarousel
  transition 1s ease

  button
    position relative
    bottom: 100px

  .carrousel-wrapper
    opacity 0
    pointer-events: none
    width: 100%
    height 100%
    transition .3s ease

    // &:hover
    //   transform scale(1.25)

    //   [data-text]:before, [data-text]:after
    //     -webkit-text-stroke: 1px $salmon;

    //   .carrousel__form
    //     //width: 57vw;
    //     //height: 105vh;

    //     [data-text]:before, [data-text]:after
    //       color $salmon

    //     .carrousel__choice
    //       color $salmon

    //   .carrousel__textScrolling
    //   //bottom 90px

    //   .carrousel__textScrolling
    //     //bottom 90px
    //     //bottom 90px
    //     color $salmon

    .carrousel__choice
      -webkit-text-stroke: 1px $salmon;

    &.visible
      pointer-events: auto

  &__story
    font-family: RobotoCondensedLight;
    font-size: 44px;
    font-weight: normal;
    font-style: normal;
    font-stretch: condensed;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    position fixed
    left: 50%;
    transform: translateX(-50%);
    z-index 2
    top: 20vh

    &:after
      content: ''
      width: 1px
      background-color #fff
      height: 60px
      display block
      position absolute
      left: 50%
      transform translateX(-50%)
      top: -70px

    &:before
      content: ''
      width: 1px
      background-color #fff
      height: 120px
      display block
      position absolute
      left: 50%
      transform translateX(-50%)
      bottom: -130px

    &__number
      font-family: RobotoCondensedLight;
      font-size: 16px;
      font-weight: normal;
      font-style: normal;
      font-stretch: condensed;
      line-height: 0.88;
      letter-spacing: 1px;
      color: #ffffff;
      vertical-align: super;

  &__form
    width: 37vw;
    height: 85vh;
    background-color: #242146;
    display block;
    border-radius 400px 400px 0px 0px
    z-index 1
    overflow: hidden
    position relative
    transition .3s ease

    .carrousel__textScrolling
      width: 300vw;
      left: -34vw;
      position: absolute;

    .carrousel__choice
      color #fff

    [data-text]:before, [data-text]:after
      color #fff

    &__content
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      position absolute
      width: 37vw;
      height: 85vh;
      transition .3s ease
      opacity 0

      &.active
        opacity 1
