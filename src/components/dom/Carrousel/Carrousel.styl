.carrousel
  width: 100vw
  height: 100vh
  background-image: linear-gradient(to bottom, rgba(0, 2, 4, 1), rgba(16, 29, 55, 1));
  position: absolute
  left: 0
  top: 0
  z-index $indexCarousel

  &.no-touch
    pointer-events: none

  &.hidden
    display none

  button
    position relative
    bottom: 100px

  .carrousel-wrapper
    opacity 0
    pointer-events: none
    width: 100%
    height 100%
    transition .3s $quad-ease-out

    &.visible
      pointer-events: auto

  &__story
    font-family: RobotoCondensedLight;
    font-size: 30px;
    font-weight: normal;
    font-style: normal;
    font-stretch: condensed;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    position fixed
    left: 50%;
    transform: translateX(-50%);
    z-index 2
    top: 20vh

    &:after
      content: ''
      width: 1px
      background-color #fff
      height: 60px
      display block
      position absolute
      left: 50%
      transform translateX(-50%)
      top: -70px

    &:before
      content: ''
      width: 1px
      background-color #fff
      height: 120px
      display block
      position absolute
      left: 50%
      transform translateX(-50%)
      bottom: -130px

    &__number
      font-family: RobotoCondensedLight;
      font-size: 16px;
      font-weight: normal;
      font-style: normal;
      font-stretch: condensed;
      line-height: 0.88;
      letter-spacing: 1px;
      color: #ffffff;
      vertical-align: super;

  &__form
    width: 37vw;
    max-width 430px
    min-width: 370px
    height: 85vh;
    background-color: #242146;
    display block;
    border-radius 400px 400px 0px 0px
    z-index 1
    overflow: hidden
    position relative
    transition .3s $quad-ease-out;

    &__content
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      position absolute
      width: 37vw;
      max-width 430px
      min-width: 370px
      height: 85vh;
      transition .5s $quad-ease-out;
      opacity 0
      pointer-events: none

      &:hover
        transform: translate(-50%, -50%) scale(1.06);

        .text-scrolling
          // color $salmon

        .text-scrolling.stroke
          color transparent
          // -webkit-text-stroke: 1px $salmon;

      &.active
        pointer-events: auto
        opacity 1
