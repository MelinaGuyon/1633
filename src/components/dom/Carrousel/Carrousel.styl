.carrousel
  width: 100vw
  height: 100vh
  background-image: linear-gradient(to bottom, rgba(0, 2, 4, 1), rgba(16, 29, 55, 1));
  position: absolute
  left: 0
  top: 0
  z-index $indexCarousel
  transition 1s ease

  &__story
    font-family: Roboto;
    font-size: 44px;
    font-weight: normal;
    font-style: normal;
    font-stretch: condensed;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    position fixed
    left: 50%;
    transform: translateX(-50%);
    z-index 2
    top: 20vh

    &:after
      content: ''
      width: 1px
      background-color #fff
      height: 60px
      display block
      position absolute
      left: 50%
      transform translateX(-50%)
      top: -70px

    &:before
      content: ''
      width: 1px
      background-color #fff
      height: 120px
      display block
      position absolute
      left: 50%
      transform translateX(-50%)
      bottom: -130px

    &__number
      font-family: Roboto;
      font-size: 16px;
      font-weight: normal;
      font-style: normal;
      font-stretch: condensed;
      line-height: 0.88;
      letter-spacing: 1px;
      color: #ffffff;
      vertical-align: super;

  &__form
    width: 37vw;
    height: 85vh;
    background-color: #242146;
    display block;
    border-radius 400px 400px 0px 0px
    z-index 1
    overflow: hidden
    position relative
    transition .3s ease

    .carrousel__choice
      color #fff

    &__content
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      position absolute
      width: 37vw;
      height: 85vh;
      transition .3s ease
      display none

      &.active
        display block

      &:hover
        width: 57vw;
        height: 105vh;

        .carrousel__form
          width: 57vw;
          height: 105vh;

          .carrousel__choice
            color $salmon

        .carrousel__textScrolling
          bottom 180px
          color $salmon

        .carrousel__choice
          -webkit-text-stroke: 1px $salmon;

  &__textScrolling
    display: block;
    padding: 0;
    overflow: hidden;
    bottom: 100px
    position fixed
    width: 300vw;
    max-width: 300vw;
    height: 200px;
    z-index 2
    left: -34vw;
    transition 0s

    div
      //position: absolute;
      //min-width: 100%;
      display inline-block
      position relative

      span, &:last-child:after
        position: relative;
        display: inline-block;
        white-space: nowrap;
        top:0;
        -webkit-background-clip: text;
        //background-image: url(https://dummyimage.com/600x400/ffffff/fff);
        //background-repeat: no-repeat;
        //background-position: 141px;
        //background-size 521px

      span
        animation: defilement 15s infinite linear;
        margin-right: 10px

      strong
        margin 0 30px

      &:after
        position: absolute;
        top: 0px;
        left: 0px;
        content:attr(data-text);
        animation: defilement2 15s infinite linear;

  &__choice
    padding: 0
    background: transparent
    border: none
    margin: 0px
    outline: none
    -webkit-text-stroke: 1px #ffffff;
    font-family: Eczar;
    font-size: 100px;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    //line-height: 0.89;
    letter-spacing: 6px;
    color: rgba(255, 255, 255, 0);
    display block
    animation-duration: 6s;
    animation-name: textDefilement;
    animation-iteration-count: infinite;

  &.hidden
    display: none

  &.opacity
    opacity: 0

@keyframes defilement {
  0% {
   transform: translateX(0);
    // background-position: 141px
  }
  100% {
   transform: translateX(-100%);
   // background-position: 1700px
  }
}

@keyframes defilement2 {
  0% {
   transform: translateX(100%);
    //background-position: -1277px
  }
  100% {
   transform: translateX(0);
   // background-position: 141px
  }
}
