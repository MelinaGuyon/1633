.chronologie
  width: 95%
  height: 100%
  background: white
  margin-left: 100vw
  position: absolute
  z-index: 1
  top: 0
  overflow: auto

.chronologie::-webkit-scrollbar
   width: 0px
   background: transparent

  .fact
    position: relative
    border: solid 1px
    width: 100%
    height: 100vh
    background: url('https://www.st-wandrille.com/images/hautdepage/im-abbay.jpg')
    background-size: cover

  .fact-unlocked
  	opacity: 1

  .background
  	width: 300px

  .factContent
    color: black
    background: white
    width: 50%
    height: 60%
    opacity: 0.5
    padding: 40px
    margin-top: 20%
    margin-left: 45%
    opacity: 0.2

  .fact img
    float: left
    width: 300px
    height: 400px
    margin-left: 10%
    margin-right: 10%
    margin-top: 20%

  .nextFact
    height: 30px
    width: 100px
    margin-left: 45%
    margin-top: 20px