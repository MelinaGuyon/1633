#chronologie
  width: 100vw
  height: 100vh
  background: $light-salmon
  position: absolute
  z-index: $indexChronologie
  top: 0
  overflow: auto
  transform: translateX(100vw)
  transition: transform 0.6s $quad-ease-out

  &.visible
    transform: translateX(0)

#chronologie::-webkit-scrollbar
   width: 0px
   background: transparent

  .fact
    position: relative
    width: 100vw
    height: 100vh

    .glass
      opacity: 0

    .locked-title
      position: absolute;
      top: 50%;
      left: 50%;
      opacity: 0
      transform: translate(-50%, -50%)
      z-index 2
      -webkit-text-stroke: 1px $salmon;
      font-family: Eczar;
      font-size: 80px;
      text-align: center;
      color: transparent;
      letter-spacing: 4px
      line-height: 90px

    &.locked
      .glass
        opacity 1

      .locked-title
        opacity: 1

      .content-container
        opacity 0

  .content-container
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;

    .character
      width: 300px;
      margin-right: 20px

    .content
      color: black
      background: white
      width: 40%
      height: 60%
      opacity: 0.5
      padding: 40px
      margin-left: 20px

    .factButtons
      margin-left: 45%
      margin-top: 20px

    .factButtons li
      display: inline-block
      margin-right: 10px

    .buttonFact
      height: 30px
      width: 100px

    .date
      margin-top: 20px
      font-size: 20px

    .name
      font-size: 15px
      margin-top: 20px
      margin-bottom: 20px
      color: #f7b0a5
      font-weight: bold
      text-transform: uppercase

    .title
      margin-top: 10px
      font-size: 30px
