.cursor-container
  width: 52px
  height: 52px
  position: absolute
  top: 0
  left: 0
  pointer-events: none
  z-index: $indexMouse
  transition: width .3s ease-out, height .3s ease-out

  &.reveal
    width: 66px
    height: 66px

    .ring
      border: solid #c8c8c8 1px

    .dot
      background: #c8c8c8

  &.reveal-big
    width: 86px
    height: 86px

    .ring
      border: solid #c8c8c8 1px

    .dot
      background: #c8c8c8

  &.hold
    width: 36px
    height: 36px

    .dot
      transform: translate(-50%, -50%) scale(1)

  .dot
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%) scale(0.05)
    width: 100%
    height: 100%
    background: #e68f83
    opacity: 0.7
    border-radius: 50%
    transition: background .3s ease, border-radius .3s ease, transform 1s ease

  .ring
    border: solid #e68f83 1px
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 50%
    transition: border .3s ease-out

