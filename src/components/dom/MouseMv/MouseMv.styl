.mouse
  width: 54px
  height: 54px
  line-height: 30px
  position: fixed
  top: 0
  left: 0
  border-radius: 50%
  border: 1px solid $salmon
  z-index 22
  display none
  pointer-events none

  &.active
    display: block

.mouse__close-zone
  width: 90vw
  height: 90vh
  position: absolute
  left: 5vh
  top: 5vh
  cursor: none

.mouse__close
  &.hide
    display none
