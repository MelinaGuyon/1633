.cursor-container
  width: 52px
  height: 52px
  position: absolute
  top: 0
  left: 0
  pointer-events: none
  z-index: 1000
  transition: width .3s ease-out, height .3s ease-out

  &.reveal
    width: 66px
    height: 66px

    .ring
      border: solid #c8c8c8 1px

    .dot
      background: #c8c8c8

  .dot
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50)
    width: 2px
    height: 2px
    background: #e68f83
    opacity: 0.7
    border-radius: 0px
    transition: background .3s ease, border-radius .3s ease, width .3s ease, height .3s ease

  .ring
    border: solid #e68f83 1px
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 50%
    animation: rotate .8s linear infinite
    transition: border .3s ease-out
