.timeline
  width: 90%
  height 2px
  position: absolute
  z-index: $indexTimeline
  bottom: 90px
  left: 50%
  transform: translateX(-50%)

  &:before
    content: ''
    display: block
    position: relative
    top: 0
    left: 0
    background: #51596a
    height 2px
    width: calc(50% - 30px)

  &:after
    content: ''
    display: block
    position: absolute
    top: 50%
    right: 0
    background: #51596a
    height 2px
    width: calc(50% - 30px)
    transform: translateY(-50%)

  .whiteCircle
    z-index: 2
    border: solid 1px #f0f1f3
    border-radius: 50%
    width: 52px
    height: 52px
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    .halo
      opacity 0
      top: 50%
      left: 50%
      position absolute
      width: 125%
      height 125%
      border-radius: 50%
      background: radial-gradient(transparent 0, transparent 43%, rgba(247, 149, 134, 0.7) 60%, transparent 70%, transparent 100%);
      transform: translate(-50%, -50%)

    &:before
      content: ''
      display: block
      position: relative
      top: 50%
      left: 0
      background: #f0f1f3
      height 1px
      width: 52px
      transform: translate(-100%, -50%)

    &:after
      z-index 2
      content: ''
      display: block
      position: relative
      top: 47%
      right: 0
      background: #f0f1f3
      height 1px
      width: 52px
      transform: translate(100%, -50%)

  .redCircleWrapper
    pointer-events: none
    z-index 3
    position: absolute
    width: 156px
    height: 52px
    overflow: hidden
    top: 1px
    left: calc(50% - 78px)
    transform: translateY(-50%)
    // transition: width .3s ease-out

    &.transition
      transition: width .6s ease-out

  .redCircle
    z-index: 2
    border: solid 1px #e68f83
    border-radius: 50%
    width: 52px
    height: 52px
    position: absolute
    left: 52px

    &:before
      content: ''
      display: block
      position: relative
      top: 50%
      left: 0
      background: #e68f83
      height 1px
      width: 52px
      transform: translate(-100%, -50%)

    &:after
      z-index 2
      content: ''
      display: block
      position: relative
      top: 47%
      right: 0
      background: #e68f83
      height 1px
      width: 52px
      transform: translate(100%, -50%)

  .points
    z-index: 1
    position: absolute
    right: 0
    top: 0px
    width: 20px
    height: 100%
    display: flex
    align-items: center

    .point
      width: 20px
      border: none
      outline: none
      padding: 14px 0
      position: absolute
      overflow hidden
      transition: width .3s ease-out

      .point-inner
        width: 20px
        height: 2px
        background: #f0f1f3
        border-radius: 10px

      &.hidden
        width: 0

  .scene-title
    position absolute
    color: $white
    bottom: calc(100% + 24px)

    .title
      font-family: RobotoCondensedBold
      text-transform: uppercase
      font-size: 24px
      line-height: 28px
      max-width 200px

    .date
      color: $salmon
      font-size: 14px;
      margin-top: 6px

    .number
      -webkit-text-stroke: 1px #ffffff;
      font-family: EczarBold;
      opacity: 0.08;
      color: transparent
      font-size: 80px
      position relative
      top 27px

      .span2
        position absolute
        color: $white
        -webkit-text-stroke: 0;
        font-size: 20px
        right -34px
        top: 15px

